<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dataGrid="using:Syncfusion.UI.Xaml.DataGrid"
    xmlns:grids="using:Syncfusion.UI.Xaml.Grids"
    xmlns:core="using:Syncfusion.UI.Xaml.Core"
    xmlns:local="using:SfDataGrid_Net">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Syncfusion.Core.WinUI/Themes/Common.xaml" />
     <ResourceDictionary Source="ms-appx:///Syncfusion.Grid.WinUI/Themes/themeresources.xaml" />
     <ResourceDictionary Source="ms-appx:///Syncfusion.Core.WinUI/Themes/DensityStyles/Standard.xaml" />
 </ResourceDictionary.MergedDictionaries>

    <core:BoolToVisibilityConverter x:Key="boolToVisiblityConverter" />
    <core:StringVisibilityConverter x:Key="stringVisibilityConverter"/>
    <core:BoolNegationConverter x:Key="reverseVisibilityConverter"/>
    <core:CollectionVisibilityConverter x:Key="collectionVisibilityConverter"/>

    <dataGrid:HeightToMarginConverter x:Key="heightToMarginConverter" />
    <dataGrid:ResourceNameConverter x:Key="resourceNameConverter" />
    <dataGrid:AdvancedFiltersButtonVisibiltyConverter x:Key="advancedFilterButtonVisibilityConverter" />

 <Style x:Key="SortButtonStyle" TargetType="grids:SortButton">
     <Setter Property="Foreground" Value="{ThemeResource SyncfusionDataGridFilterControlSortButtonForeground}" />
     <Setter Property="Padding" Value="{ThemeResource SyncfusionItemPadding}" />
     <Setter Property="Height" Value="{ThemeResource SyncfusionListItemMinHeight}"/>
     <Setter Property="HorizontalAlignment" Value="Stretch" />
     <Setter Property="VerticalAlignment" Value="Stretch" />
     <Setter Property="FontWeight" Value="{ThemeResource SyncfusionDataGridFontWeight}" />
     <Setter Property="FontSize" Value="{ThemeResource SyncfusionBodyFontSize}" />
     <Setter Property="FontFamily" Value="{ThemeResource SyncfusionDataGridFontFamily}"/>
     <Setter Property="Background" Value="{ThemeResource SyncfusionDataGridFilterControlSortButtonBackground}"/>
     <Setter Property="UseSystemFocusVisuals" Value="True"/>
     <Setter Property="CornerRadius" Value="{ThemeResource SyncfusionDataGridFilterControlSortButtonCornerRadius}"/>
     <Setter Property="Template">
         <Setter.Value>
             <ControlTemplate TargetType="grids:SortButton">
                 <Grid x:Name="PART_RootGrid"  CornerRadius="4" Margin="0,0,3,0" >
                     <VisualStateManager.VisualStateGroups>
                         <VisualStateGroup x:Name="CommonStates">
                             <VisualState x:Name="Normal" />
                             <VisualState x:Name="PointerOver">
                                 <Storyboard>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_RootBorder" Storyboard.TargetProperty="Background">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlSortButtonBackgroundPointerOver}" />
                                     </ObjectAnimationUsingKeyFrames>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ContentPresenter" Storyboard.TargetProperty="Foreground">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlSortButtonForegroundPointerOver}" />
                                     </ObjectAnimationUsingKeyFrames>
                                 </Storyboard>
                             </VisualState>
                             <VisualState x:Name="Pressed">
                                 <Storyboard>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_RootBorder" Storyboard.TargetProperty="Background">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlSortButtonBackgroundPressed}" />
                                     </ObjectAnimationUsingKeyFrames>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ContentPresenter" Storyboard.TargetProperty="Foreground">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlSortButtonForegroundPressed}" />
                                     </ObjectAnimationUsingKeyFrames>
                                 </Storyboard>
                             </VisualState>
                             <VisualState x:Name="Disabled">
                                 <Storyboard>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_RootBorder" Storyboard.TargetProperty="Background">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlSortButtonBackgroundDisabled}" />
                                     </ObjectAnimationUsingKeyFrames>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ContentPresenter" Storyboard.TargetProperty="Foreground">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlSortButtonForegroundDisabled}" />
                                     </ObjectAnimationUsingKeyFrames>
                                 </Storyboard>
                             </VisualState>
                         </VisualStateGroup>
                         <VisualStateGroup x:Name="FocusStates">
                             <VisualState x:Name="Focused">
                                 <Storyboard>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_RootBorder" Storyboard.TargetProperty="Background">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlSortButtonBackgroundPressed}" />
                                     </ObjectAnimationUsingKeyFrames>
                                 </Storyboard>
                             </VisualState>
                             <VisualState x:Name="Unfocused" />
                             <VisualState x:Name="PointerFocused" />
                         </VisualStateGroup>
                         <VisualStateGroup x:Name="SortStates">
                             <VisualState x:Name="Sorted">
                                 <Storyboard>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_RootGrid" Storyboard.TargetProperty="Background">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlSortButtonBackgroundSelectedActive}" />
                                     </ObjectAnimationUsingKeyFrames>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ContentPresenter" Storyboard.TargetProperty="Foreground">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlSortButtonForegroundSelectedActive}" />
                                     </ObjectAnimationUsingKeyFrames>
                                 </Storyboard>
                             </VisualState>
                             <VisualState x:Name="UnSorted">
                             </VisualState>
                         </VisualStateGroup>
                     </VisualStateManager.VisualStateGroups>
                     <Border x:Name="PART_RootBorder"
                          Padding="{TemplateBinding Padding}"
                          Background="{TemplateBinding Background}"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}">
                         <StackPanel Orientation="Horizontal">
                             <Border x:Name="PART_IconPresenter"
                                  Padding="2"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  BorderThickness="1" />
                             <ContentPresenter x:Name="PART_ContentPresenter"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            ContentTransitions="{TemplateBinding ContentTransitions}" />
                         </StackPanel>
                     </Border>
                     <Rectangle x:Name="PART_FocusVisualWhite"
                             IsHitTestVisible="False"
                             Opacity="0"
                             Stroke="{ThemeResource FocusVisualWhiteStrokeThemeBrush}"
                             StrokeDashArray="1,1"
                             StrokeDashOffset="1.5"
                             StrokeEndLineCap="Square" />
                     <Rectangle x:Name="PART_FocusVisualBlack"
                             IsHitTestVisible="False"
                             Opacity="0"
                             Stroke="{ThemeResource FocusVisualBlackStrokeThemeBrush}"
                             StrokeDashArray="1,1"
                             StrokeDashOffset="0.5"
                             StrokeEndLineCap="Square" />
                 </Grid>
             </ControlTemplate>
         </Setter.Value>
     </Setter>
 </Style>
 <Style BasedOn="{StaticResource SortButtonStyle}" TargetType="grids:SortButton"/>

 <DataTemplate x:Key="DataGridFilterControlCheckboxTemplate">
     <CheckBox Margin="0"
      HorizontalAlignment="Stretch"
      HorizontalContentAlignment="Stretch"
      Content="{Binding DisplayText,
                      Mode=OneWay}" 
      FontFamily="{Binding FontFamily,RelativeSource={RelativeSource Self}}"
      FontSize="{Binding FontSize,RelativeSource={RelativeSource Self}}"
      FontStretch="{Binding FontStretch,RelativeSource={RelativeSource Self}}"
      FontStyle="{Binding FontStyle,RelativeSource={RelativeSource Self}}"
      FontWeight="{Binding FontWeight,RelativeSource={RelativeSource Self}}"
      Foreground="{Binding Foreground,RelativeSource={RelativeSource Self}}"
      IsChecked="{Binding IsSelected,
                          Mode=TwoWay}" />
 </DataTemplate>

 <Style x:Key="CheckboxFilterControlStyle" TargetType="dataGrid:CheckboxFilterControl">
     <Setter Property="Background" Value="{ThemeResource SyncfusionDataGridFilterControlBackground}" />
     <Setter Property="BorderBrush" Value="{ThemeResource SyncfusionDataGridFilterControlBorderBrush}" />
     <Setter Property="BorderThickness" Value="1,1,1,3" />
     <Setter Property="ItemTemplate" Value="{StaticResource DataGridFilterControlCheckboxTemplate}"/>
     <Setter Property="Template">
         <Setter.Value>
             <ControlTemplate TargetType="dataGrid:CheckboxFilterControl">
                 <Grid Height="{TemplateBinding Height}">
                     <Grid.RowDefinitions>
                         <RowDefinition Height="Auto" />
                         <RowDefinition Height="*" />
                     </Grid.RowDefinitions>
                     <Grid Margin="12,0,12,8" Visibility="{TemplateBinding SearchOptionVisibility}">
                         <TextBox x:Name="PART_SearchTextBox"
                                   Grid.Column="0"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   TextWrapping="Wrap"
                                   BorderThickness="1" 
                                   Visibility="{TemplateBinding SearchOptionVisibility}"/>
                         <TextBlock Grid.Column="0"  
                                     Margin="11,4,0,6"
                                     Height="15"
                                     Width="80"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     FontFamily="{ThemeResource SyncfusionDataGridFontFamily}"
                                     FontSize="{ThemeResource SyncfusionBodyFontSize}"
                                     FontStretch="{TemplateBinding FontWeight}"
                                     FontStyle="{TemplateBinding FontStyle}"
                                     FontWeight="{ThemeResource SyncfusionDataGridFontWeight}"
                                     Foreground="{ThemeResource SyncfusionDataGridFilterControlForeground}" 
                                     IsHitTestVisible="False"
                                     Text="{grids:GridLocalizationResourceExtension ResourceName=Search}"
                                     Visibility="{TemplateBinding SearchTextBlockVisibility}" />
                         <Border Width="16"    
                                  Height="16"
                                  Margin="0,7,10,7"
                                  HorizontalAlignment="Right"
                                  CornerRadius="4"
                                  Visibility="{Binding Text,
                                                       ElementName=PART_SearchTextBox,
                                                       ConverterParameter=True,
                                                       Converter={StaticResource ResourceKey=stringVisibilityConverter}}">

                             <FontIcon Foreground="{ThemeResource SyncfusionDataGridFilterControlSearchIconBrush}"  Glyph="&#xE721;" FontSize="{ThemeResource SyncfusionCaptionFontSize}"   />
                         </Border>
                         <Border HorizontalAlignment="Right">
                             <Button x:Name="PART_DeleteButton"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      BorderBrush="{TemplateBinding BorderBrush}"
                                      Margin="0,7,10,7" 
                                      Visibility="{Binding Text,
                                                           ElementName=PART_SearchTextBox,
                                                           Converter={StaticResource ResourceKey=stringVisibilityConverter}}">
                                 <Button.Style>
                                     <Style TargetType="Button">
                                         <Setter Property="Template">
                                             <Setter.Value>
                                                 <ControlTemplate TargetType="Button">
                                                     <Grid>
                                                         <VisualStateManager.VisualStateGroups>
                                                             <VisualStateGroup x:Name="CommonStates">
                                                                 <VisualState x:Name="Normal" />
                                                                 <VisualState x:Name="Pressed" >
                                                                     <Storyboard>
                                                                         <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_DeleteButtonPresenter" Storyboard.TargetProperty="BorderBrush">
                                                                             <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlSearchIconBackgroundPressed}" />
                                                                         </ObjectAnimationUsingKeyFrames>
                                                                         <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_DeleteButtonPresenter" Storyboard.TargetProperty="Background">
                                                                             <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlSearchIconBackgroundPressed}" />
                                                                         </ObjectAnimationUsingKeyFrames>
                                                                     </Storyboard>
                                                                 </VisualState>
                                                                 <VisualState x:Name="Disabled" />
                                                                 <VisualState x:Name="PointerOver" >
                                                                     <Storyboard>
                                                                         <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_DeleteButtonPresenter" Storyboard.TargetProperty="BorderBrush">
                                                                             <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlSearchIconBackgroundPointerOver}" />
                                                                         </ObjectAnimationUsingKeyFrames>
                                                                         <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_DeleteButtonPresenter" Storyboard.TargetProperty="Background">
                                                                             <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlSearchIconBackgroundPointerOver}" />
                                                                         </ObjectAnimationUsingKeyFrames>
                                                                     </Storyboard>
                                                                 </VisualState>
                                                             </VisualStateGroup>
                                                             <VisualStateGroup x:Name="FocusStates">
                                                                 <VisualState x:Name="Focused" />
                                                                 <VisualState x:Name="PointerFocused" />
                                                             </VisualStateGroup>
                                                         </VisualStateManager.VisualStateGroups>
                                                         <Border x:Name="PART_DeleteButtonPresenter"
                                                                  HorizontalAlignment="Stretch"
                                                                  VerticalAlignment="Stretch"
                                                                  Width="32"
                                                                  CornerRadius="{ThemeResource SyncfusionDataGridFilterControlDeleteIconCornerRadius}"
                                                                  Background="{ThemeResource SyncfusionDataGridFilterControlSearchIconBackground}"
                                                                  BorderBrush="{ThemeResource SyncfusionDataGridFilterControlSearchIconBackground}"
                                                                  BorderThickness="0">
                                                             <FontIcon Glyph="&#xE711;" FontSize="{ThemeResource SyncfusionCaptionFontSize}" Foreground="{ThemeResource SyncfusionDataGridFilterControlDeleteIconForeground}"/>

                                                         </Border>
                                                     </Grid>
                                                 </ControlTemplate>
                                             </Setter.Value>
                                         </Setter>
                                     </Style>
                                 </Button.Style>
                             </Button>
                         </Border>
                     </Grid>
                     <Border Grid.Row="1"
                              Margin="8,0,8,4"
                              Background="{TemplateBinding Background}"
                              BorderBrush="{ThemeResource SystemBaseMediumColor}">
                         <Grid>
                             <TextBlock Margin="0,25,0,0"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Top"
                                          FontSize="{ThemeResource SyncfusionBodyFontSize}"
                                          FontFamily="{ThemeResource SyncfusionDataGridFontFamily}"
                                          FontWeight="{ThemeResource SyncfusionDataGridFontWeight}"
                                         Foreground="{ThemeResource SyncfusionDataGridFilterControlSearchTextWatermarkBrush}" 
                                         Text="{grids:GridLocalizationResourceExtension ResourceName=NoItems}"
                                        Visibility="{Binding HasItemsSource,
                                                              RelativeSource={RelativeSource TemplatedParent},
                                                              Converter={StaticResource ResourceKey=reverseVisibilityConverter}}" />
                             <Grid Visibility="{Binding HasItemsSource, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ResourceKey=boolToVisiblityConverter}}">
                                 <Grid.RowDefinitions>
                                     <RowDefinition Height="Auto" />
                                     <RowDefinition Height="*" />
                                 </Grid.RowDefinitions>
                                 <Border Grid.Row="0"
                                      Margin="5,0,5,0" 
                                      Width="244"
                                      Height="34"
                                      VerticalAlignment="Top"
                                      Background="{TemplateBinding Background}"
                                      Visibility="{Binding ItemsSource,
                                                               ElementName=PART_ItemsControl,
                                                               Converter={StaticResource ResourceKey=collectionVisibilityConverter}}">
                                     <CheckBox x:Name="PART_CheckBox"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Center"
                                                Margin="4,0,10,0"
                                                Content="{grids:GridLocalizationResourceExtension ResourceName=SelectAll}"
                                                IsThreeState="True"
                                                Visibility="{Binding ItemsSource,
                                                               ElementName=PART_ItemsControl,
                                                               Converter={StaticResource ResourceKey=collectionVisibilityConverter}}" />
                                 </Border>
                                 <Grid Grid.Row="1">
                                     <ProgressRing x:Name="PART_ProgressRing"
                                                    Height="30"
                                                    Width="30"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="{ThemeResource SyncfusionBuysIndicatorFill}"
                                                     IsActive="{Binding IsItemSourceLoaded,
                                                                       Mode=TwoWay,
                                                                       RelativeSource={RelativeSource TemplatedParent},
                                                                       Converter={StaticResource ResourceKey=reverseVisibilityConverter}}"    IsTabStop="False" />

                                     <ItemsControl x:Name="PART_ItemsControl"
                                                    Height="{TemplateBinding Height}"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    IsTabStop="False"
                                                    HorizontalContentAlignment="Stretch"
                                                    VerticalContentAlignment="Stretch"
                                                    ItemTemplate="{TemplateBinding ItemTemplate}"
                                                    ItemsSource="{TemplateBinding ItemsSource}"
                                                    Visibility="{Binding IsActive,
                                                                         ElementName=PART_ProgressRing,
                                                                         ConverterParameter=True,
                                                                         Converter={StaticResource ResourceKey=boolToVisiblityConverter}}">
                                         <ItemsControl.Template>
                                             <ControlTemplate TargetType="ItemsControl">
                                                 <Border Background="{TemplateBinding Background}"
                                                          Margin="5,0,5,0"
                                                          BorderBrush="{TemplateBinding BorderBrush}"
                                                          BorderThickness="{TemplateBinding BorderThickness}"
                                                          Padding="{TemplateBinding Padding}">
                                                     <Grid>
                                                         <ScrollViewer x:Name="PART_ScrollViewer" HorizontalAlignment="Stretch"
                                                                        HorizontalScrollBarVisibility="Auto"
                                                                        IsTabStop="False"
                                                                        VerticalScrollBarVisibility="Auto"
                                                                        Visibility="{Binding ItemsSource,
                                                                                             RelativeSource={RelativeSource TemplatedParent},
                                                                                             Converter={StaticResource ResourceKey=collectionVisibilityConverter}}">
                                                             <ItemsPresenter x:Name="PART_ItemsPresenter" Margin="4,0,4,4" />
                                                         </ScrollViewer>
                                                         <TextBlock Margin="{Binding ElementName=PART_ItemsPresenter,
                                                                                      Path=Margin}"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Top"
                                                                     FontFamily="{ThemeResource SyncfusionDataGridFontFamily}"
                                                                     FontSize="{ThemeResource SyncfusionBodyFontSize}"
                                                                     FontStretch="{TemplateBinding FontWeight}"
                                                                     FontStyle="{TemplateBinding FontStyle}"
                                                                     FontWeight="{ThemeResource SyncfusionDataGridFontWeight}"
                                                                     Foreground="{ThemeResource SyncfusionDataGridFilterControlSearchTextWatermarkBrush}"
                                                                     Text="{grids:GridLocalizationResourceExtension ResourceName=NoMatches}"
                                                                    Visibility="{Binding ItemsSource,
                                                                                          RelativeSource={RelativeSource TemplatedParent},
                                                                                          ConverterParameter=True,
                                                                                          Converter={StaticResource ResourceKey=collectionVisibilityConverter}}" />
                                                     </Grid>
                                                 </Border>
                                             </ControlTemplate>
                                         </ItemsControl.Template>
                                         <ItemsControl.ItemsPanel>
                                             <ItemsPanelTemplate>
                                                 <VirtualizingStackPanel HorizontalAlignment="Stretch" />
                                             </ItemsPanelTemplate>
                                         </ItemsControl.ItemsPanel>

                                     </ItemsControl>
                                 </Grid>
                             </Grid>
                         </Grid>
                     </Border>
                 </Grid>
             </ControlTemplate>
         </Setter.Value>
     </Setter>
 </Style>
 <Style BasedOn="{StaticResource CheckboxFilterControlStyle}" TargetType="dataGrid:CheckboxFilterControl"/>

 <Style x:Key="clearFilterBtnStyle" TargetType="Button">
     <Setter Property="Background" Value="Blue" />
     <Setter Property="Foreground" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterButtonForeground}" />
     <Setter Property="BorderBrush" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterButtonBorderBrush}" />
     <Setter Property="BorderThickness" Value="{ThemeResource ButtonBorderThemeThickness}" />
     <Setter Property="Padding" Value="{ThemeResource SyncfusionItemPadding}" />
     <Setter Property="Height" Value="{ThemeResource SyncfusionListItemMinHeight}"/>
     <Setter Property="HorizontalAlignment" Value="Left" />
     <Setter Property="VerticalAlignment" Value="Center" />
     <Setter Property="FontSize" Value="{ThemeResource SyncfusionBodyFontSize}" />
     <Setter Property="FontWeight" Value="{ThemeResource SyncfusionDataGridFontWeight}" />
     <Setter Property="FontFamily" Value="{ThemeResource SyncfusionDataGridFontFamily}" />
     <Setter Property="CornerRadius" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterButtonCornerRadius}"/>
     <Setter Property="Template">
         <Setter.Value>
             <ControlTemplate TargetType="Button">
                 <Grid>
                     <VisualStateManager.VisualStateGroups>
                         <VisualStateGroup x:Name="CommonStates">
                             <VisualState x:Name="Normal" />
                             <VisualState x:Name="PointerOver">
                                 <Storyboard>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Background">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterButtonBackgroundPointerOver}"/>

                                     </ObjectAnimationUsingKeyFrames>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterButtonForegroundPointerOver}"/>

                                     </ObjectAnimationUsingKeyFrames>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="path" Storyboard.TargetProperty="(Shape.Fill)">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterIconPointerOver}"/>
                                     </ObjectAnimationUsingKeyFrames>
                                 </Storyboard>
                             </VisualState>
                             <VisualState x:Name="Pressed">
                                 <Storyboard>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Background">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterButtonBackgroundPressed}"/>
                                     </ObjectAnimationUsingKeyFrames>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterButtonForegroundPressed}" />
                                     </ObjectAnimationUsingKeyFrames>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="path" Storyboard.TargetProperty="(Shape.Fill)">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterIconPressed}" />
                                     </ObjectAnimationUsingKeyFrames>
                                 </Storyboard>
                             </VisualState>
                             <VisualState x:Name="Disabled">
                                 <Storyboard>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Background">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterButtonBackgroundDisabled}"/>
                                     </ObjectAnimationUsingKeyFrames>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterButtonForegroundDisabled}" />
                                     </ObjectAnimationUsingKeyFrames>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="path" Storyboard.TargetProperty="(Shape.Fill)">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterIconDisabled}" />
                                     </ObjectAnimationUsingKeyFrames>
                                     
    <DoubleAnimation Duration="0"
                                                   Storyboard.TargetName="Border"
                                                   Storyboard.TargetProperty="(UIElement.Opacity)"
                                                   To="0.5" />
    
                                 </Storyboard>
                             </VisualState>
                         </VisualStateGroup>
                         <VisualStateGroup x:Name="FocusStates">
                             <VisualState x:Name="Focused">
                                 <Storyboard>

                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Background">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterButtonBackgroundPressed}"/>
                                     </ObjectAnimationUsingKeyFrames>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterButtonForegroundPressed}"/>
                                     </ObjectAnimationUsingKeyFrames>
                                     <ObjectAnimationUsingKeyFrames Storyboard.TargetName="path" Storyboard.TargetProperty="(Shape.Fill)">
                                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SyncfusionDataGridFilterControlClearFilterIconPressed}"/>
                                     </ObjectAnimationUsingKeyFrames>

                                 </Storyboard>
                             </VisualState>
                             <VisualState x:Name="Unfocused" />
                             <VisualState x:Name="PointerFocused" />
                         </VisualStateGroup>
                     </VisualStateManager.VisualStateGroups>
                     <Border BorderBrush="{ThemeResource SyncfusionDataGridFilterControlTopSeparatorBorderBrush}"
                          BorderThickness="0,1,0,0" />
                     <Grid  CornerRadius="4" Margin="4,0,4,0">
                         <Border x:Name="Border"
                              Margin="0,1,0,0"
                              Padding="{TemplateBinding Padding}"
                              Background="{TemplateBinding Background}"
                              BorderBrush="{TemplateBinding BorderBrush}">
                             <Grid>
                                 <Grid.ColumnDefinitions>
                                     <ColumnDefinition Width="Auto" />
                                     <ColumnDefinition />
                                 </Grid.ColumnDefinitions>
                                 <Border>
                                     <Path x:Name="path"
                                        Width="12"
                                        Height="10"                                              
                                        Data="M15.291991,7.9980363 L15.999988,8.7050375 14.207067,10.50006 15.998995,12.294092 15.291017,13.001063 13.499986,11.207969 11.709008,13.001046 11.001011,12.294044 12.792894,10.500062 10.999995,8.7050957 11.708004,7.998063 13.499982,9.7921451 z M1,1 L1,1.1610003 6.9999995,7.2280002 6.9999995,12 8.9999998,12 8.9999998,7.006 15,1.1550002 15,1 z M0,0 L16,0 16,1.5770001 9.9999995,7.428 9.9999995,13 5.9999995,13 5.9999995,7.638 0,1.5710001 z"
                                        Fill="{ThemeResource SyncfusionDataGridFilterControlClearFilterIcon}"
                                        Stretch="Uniform">
                                         <Path.RenderTransform>
                                             <TransformGroup>
                                                 <TransformGroup.Children>
                                                     <RotateTransform Angle="0" />
                                                     <ScaleTransform ScaleX="1" ScaleY="1" />
                                                 </TransformGroup.Children>
                                             </TransformGroup>
                                         </Path.RenderTransform>
                                     </Path>
                                 </Border>
                                 <ContentPresenter x:Name="ContentPresenter"
                                                Grid.Column="1"
                                                Margin="10,0,0,0"
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                Content="{TemplateBinding Content}"
                                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                                ContentTransitions="{TemplateBinding ContentTransitions}" />
                             </Grid>
                         </Border>
                     </Grid>
                 </Grid>
             </ControlTemplate>
         </Setter.Value>
     </Setter>
 </Style>

 <Style x:Key="AdvancedFiltersBtnStyle" TargetType="Button">
     <Setter Property="Background" Value="{ThemeResource SyncfusionDataGridAdvancedFilterButtonBackground}" />
     <Setter Property="Foreground" Value="{ThemeResource SyncfusionDataGridAdvancedFilterButtonForeground}" />
     <Setter Property="BorderBrush" Value="{ThemeResource SyncfusionDataGridAdvancedFilterButtonBorderBrush}" />
     <Setter Property="BorderThickness" Value="{ThemeResource ButtonBorderThemeThickness}" />
     <Setter Property="Padding" Value="{ThemeResource SyncfusionItemPadding}" />
     <Setter Property="Height" Value="{ThemeResource SyncfusionListItemMinHeight}"/>
     <Setter Property="HorizontalAlignment" Value="Left" />
     <Setter Property="VerticalAlignment" Value="Center" />
     <Setter Property="FontFamily" Value="{ThemeResource SyncfusionDataGridFontFamily}" />
     <Setter Property="FontWeight" Value="Normal" />
     <Setter Property="FontSize" Value="{ThemeResource SyncfusionBodyFontSize}" />
     <Setter Property="CornerRadius" Value="{ThemeResource SyncfusionDataGridAdvancedFilterButtonCornerRadius}"/>
     <Setter Property="Template">
         <Setter.Value>
             <ControlTemplate TargetType="Button">
                 <Grid x:Name="PART_AdvancedFiltersButtonPresenter"  CornerRadius="4" Margin="4,0,6,0"
                    Padding="{TemplateBinding Padding}" 
                    Background="{TemplateBinding Background}">
